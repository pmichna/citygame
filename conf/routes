# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index()
GET		/login							controllers.Application.loginGET()
POST	/login							controllers.Application.loginPOST()
GET		/logout							controllers.Application.logoutGET()

GET     /createAccount					controllers.UserAccountController.createAccountGET()
POST	/createAccount					controllers.UserAccountController.createAccountPOST()
GET		/deleteAccount					controllers.UserAccountController.deleteAccountGET()
GET		/editAccount					controllers.UserAccountController.editAccountGET()
POST	/editAccount					controllers.UserAccountController.editAccountPOST()
GET		/viewAccount					controllers.UserAccountController.viewAccountGET()

GET		/createScenario					controllers.ScenarioController.createScenarioGET()
POST	/createScenario					controllers.ScenarioController.createScenarioPOST()
GET		/myScenarios					controllers.ScenarioController.viewMyScenariosGET()
GET		/myScenarios					controllers.ScenarioController.viewMyScenariosGET()
GET		/viewScenario/:scenario			controllers.ScenarioController.viewScenarioGET(scenario: Long)

GET  	/createCheckpoint/:scenario		controllers.CheckpointController.createCheckpointGET(scenario: Long)
POST	/createCheckpoint/				controllers.CheckpointController.createCheckpointPOST()
GET  	/editCheckpoint/:checkpoint		controllers.CheckpointController.editCheckpointGET(checkpoint: Long)
POST	/editCheckpoint/				controllers.CheckpointController.editCheckpointPOST()
GET  	/viewCheckpoint/:checkpoint		controllers.CheckpointController.viewCheckpointGET(checkpoint: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
